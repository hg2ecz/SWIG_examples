PROJECT=c_example

CC=gcc
CFLAGS=-O2 -Wall -I/usr/include/luajit-2.0/ -fpic
LDFLAGS=-shared -s

OBJS=$(PROJECT)_wrap.o $(PROJECT).o
TARGET=$(PROJECT).so

all:
	swig -lua $(PROJECT).i
	make sofile -f Makefile-LUAjit

sofile: $(OBJS)
	$(CC) $(LDFLAGS) $(OBJS) -o $(TARGET)


clean:
	rm -f $(OBJS) $(PROJECT)_wrap.c $(PROJECT).py ../$(PROJECT).py $(TARGET)
